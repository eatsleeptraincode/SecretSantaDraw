@model SecretSantaDraw.Models.Draw

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Draw</legend>

        @Html.HiddenFor(model => model.DrawId)

        <div class="editor-label">
            @Html.LabelFor(model => model.DrawDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DrawDate)
            @Html.ValidationMessageFor(model => model.DrawDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SpendLimit)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SpendLimit)
            @Html.ValidationMessageFor(model => model.SpendLimit)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.OwnerId, "Owner")
        </div>
        <div class="editor-field">
            @Html.DropDownList("OwnerId", String.Empty)
            @Html.ValidationMessageFor(model => model.OwnerId)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
